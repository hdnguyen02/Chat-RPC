<div class="modal" id="modelNewChatRoom" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle"
    aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content shadow-lg border-0">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">New chat room</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label for="name-chat-room">Name<span style="color: red">*</span></label>
                    <input name="name-chat-room" type="text" class="form-control" placeholder="Enter name">
                </div>
                <div class="form-group">
                    <label for="password-chat-room">password</label>
                    <input name="password-chat-room" type="password" class="form-control" placeholder="Enter password">
                </div>
                <div class="form-group">
                    <label for="confirm-password-chat-room">confirm password</label>
                    <input name="confirm-password-chat-room" type="password" class="form-control"
                        placeholder="Enter confirm password">
                </div>
            </div>
            <div class="modal-footer">

                <button id="btn-new-chat-room" data-dismiss="modal" type="button"
                    class="btn btn-success w-100">Submit</button>
            </div>
        </div>
    </div>
</div>


<div class="modal" id="modelEnterPassWordChatRoom" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle"
    aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content shadow-lg border-0">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Please enter a password</h5>
                <button id="btn-close-model-epcr" type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label for="enter-password">Password<span style="color: red">*</span></label>
                    <input name="enter-password" type="text" class="form-control" id="name-chat-room"
                        placeholder="Enter password">
                </div>
            </div>
            <div class="modal-footer">

                <button id="btn-join-chat-room" data-dismiss="modal" type="button"
                    class="btn btn-success w-100">Join</button>
            </div>
        </div>
    </div>
</div>



